!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Myapp
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
  %body
    .app-title.navbar.navbar-expand-md.navbar-light.bg-light
      .navbar-brand 不動産アプリ
      %ul.navbar-nav.ml-auto
      .nav.justify-content-end
        - if current_user
          %li.nav-item= link_to '新規登録', new_building_path, class: 'btn btn-primary'
          %li.nav-item= link_to 'TOPページ', buildings_path, class: 'nav-link'
          %li.nav-item= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link'
    .container
      - if flash.notice.present?
        .alert.alert-success= flash.notice
      = yield
      %p.notice= notice
      %p.alert= alert
