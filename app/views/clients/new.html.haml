              %li
                = f.radio_button :completion, '25年以内'
                = f.label :completion, "25年以内"
              %li
                = f.radio_button :completion, '30年以内'
                = f.label :completion, "30年以内"
              %li
                = f.radio_button :completion, '指定しない', {checked: true}
                = f.label :completion, "指定しない"
        %tr
          %th.property_view_table-title
            = f.label 'その他条件'
          %td.property_view_table-body
            = f.text_field :conditions, class: 'form-control', :placeholder => "エアコン付き、ペット可", :type => "text"
        %tr
          %td.property_view_table-body{:colspan => "3"}
            = f.submit '確認画面へ', class: 'btn btn-primary btn-block col-sm-12'
