                1DK
              %li
                = f.check_box :madori, {multiple: true}, "1LDK", nil
                1LDK
              %li
                = f.check_box :madori, {multiple: true}, "2K", nil
                2K
              %li
                = f.check_box :madori, {multiple: true}, "2DK", nil
                2DK
              %li
                = f.check_box :madori, {multiple: true}, "2LDK", nil
                2LDK
              %li
                = f.check_box :madori, {multiple: true}, "3K", nil
                3K
              %li
                = f.check_box :madori, {multiple: true}, "3DK", nil
                3DK
              %li
                = f.check_box :madori, {multiple: true}, "3LDK", nil
                3LDK
              %li
                = f.check_box :madori, {multiple: true}, "4K", nil
